{
    "compilerOptions": {
      "target": "ES2015",
      "module": "ESNext",
      "useDefineForClassFields": true,
      "lib": ["ESNext", "DOM"],
      "moduleResolution": "Node",
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "skipLibCheck": true,
      "types": ["vitest/globals"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  